{
  "manifest_version": 2,

  "name": "mEtsy",
  "description": "Etsy crawler.",
  "version": "1.0",
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://*.etsy.com/*",
    "storage"
  ],
  "background": [{
    "js": [
      "/js/Background.js"
    ]
  }],
  "content_scripts": [{
    "run_at": "document_idle",
    "matches": [
      "https://*.etsy.com/*"
    ],
    "js": [
      "/lib/jquery.js",
      "/lib/moment.js",
      "/lib/lodash.min.js",
      "/js/Globals.js",
      "/js/Helpers.js",
      "/js/Database.js",
      "/js/Crawler.js",
      "/js/Content.js"
    ]
  }]
}
