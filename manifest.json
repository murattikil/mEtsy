{
  "manifest_version": 2,

  "name": "mEtsy",
  "description": "Tool for automatic faving of shops and items on Etsy.",
  "version": "1.0",
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "/views/content.html"
  },
  "permissions": [
    "activeTab",
    "https://*.etsy.com/*",
    "storage",
    "unlimitedStorage"
  ],
  "background": {
    "scripts": [
      "/lib/jquery.js",
      "/lib/moment.js",
      "/lib/mustache.js",
      "/lib/lodash.min.js",
      "lib/purl.js"
    ]
  },
  "content_scripts": [{
    "run_at": "document_idle",
    "matches": [
      "https://*.etsy.com/*"
    ],
    "js": [
      "/lib/jquery.js",
      "/lib/moment.js",
      "/lib/mustache.js",
      "/lib/lodash.min.js",
      "lib/purl.js"
    ],
    "css": ["/views/style.css"]
  }],
   "web_accessible_resources": [
     "/views/content.html"
   ]
}
