{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "js"
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "files": [
        "typescript/Background.ts",
        "typescript/Content.ts",
        "typescript/Crawler.ts",
        "typescript/Database.ts",
        "typescript/DatabaseInterfaces.ts",
        "typescript/Enums.ts",
        "typescript/Globals.ts",
        "typescript/Interfaces.ts",
        "typescript/ItemFaver.ts",
        "typescript/ItemsForYou.ts",
        "typescript/Logger.ts",
        "typescript/MessageHandler.ts",
        "typescript/TeamFaver.ts",
        "typescript/Utils.ts",
        "typings/chrome/chrome.d.ts",
        "typings/es6-promise/es6-promise.d.ts",
        "typings/filesystem/filesystem.d.ts",
        "typings/filewriter/filewriter.d.ts",
        "typings/jquery/jquery.d.ts",
        "typings/lodash/lodash.d.ts",
        "typings/moment/moment-node.d.ts",
        "typings/moment/moment.d.ts",
        "typings/mustache/mustache.d.ts",
        "typings/q/Q.d.ts",
        "typings/webrtc/MediaStream.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
