{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "js"
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "files": [
        "typescript/background/Background.ts",
        "typescript/Config.ts",
        "typescript/content/Content.ts",
        "typescript/content/SideDialog.ts",
        "typescript/Database.ts",
        "typescript/dto/ConfigDTO.ts",
        "typescript/dto/DiscussionDTO.ts",
        "typescript/dto/FavesTrackDTO.ts",
        "typescript/dto/ListingDTO.ts",
        "typescript/dto/TaskDTO.ts",
        "typescript/dto/TeamDTO.ts",
        "typescript/Enums.ts",
        "typescript/favers/discussion/BaseDiscussionFaver.ts",
        "typescript/favers/discussion/FavathonDiscussionFaver.ts",
        "typescript/favers/discussion/IDiscussionFaver.ts",
        "typescript/favers/ItemFaver.ts",
        "typescript/Globals.ts",
        "typescript/Interfaces.ts",
        "typescript/messages/BaseMsg.ts",
        "typescript/messages/Interfaces.ts",
        "typescript/messages/TaskMsg.ts",
        "typescript/repository/BaseRepo.ts",
        "typescript/repository/DiscussionsRepo.ts",
        "typescript/repository/FavesRepo.ts",
        "typescript/repository/ListingsRepo.ts",
        "typescript/repository/Repo.ts",
        "typescript/repository/TaskRepo.ts",
        "typescript/repository/TeamsRepo.ts",
        "typescript/tasks/Enums.ts",
        "typescript/tasks/Interfaces.ts",
        "typescript/tasks/Task.ts",
        "typescript/Utils.ts",
        "typings/chrome/chrome.d.ts",
        "typings/es6-promise/es6-promise.d.ts",
        "typings/filesystem/filesystem.d.ts",
        "typings/filewriter/filewriter.d.ts",
        "typings/jquery/jquery.d.ts",
        "typings/lodash/lodash.d.ts",
        "typings/moment/moment-node.d.ts",
        "typings/moment/moment.d.ts",
        "typings/mustache/mustache.d.ts",
        "typings/purl/purl-jquery.d.ts",
        "typings/purl/purl.d.ts",
        "typings/q/Q.d.ts",
        "typings/webrtc/MediaStream.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
